#!/bin/bash

set -e

# Colors for output
GREEN='\033[0;32m'
NC='\033[0m' # No Color

log() {
  echo -e "${GREEN}[INFO]${NC} $1"
}

log "Setting up prime-rl..."
if [ ! -d "prime-rl" ]; then
  curl -sSL https://raw.githubusercontent.com/PrimeIntellect-ai/prime-rl/main/scripts/install.sh | bash
fi

log "Setting up reserach-environments..."
if [ ! -d "research-environments" ]; then
  curl -sSL https://raw.githubusercontent.com/PrimeIntellect-ai/research-environments/main/scripts/install.sh | bash
fi

log "Setting up verifiers..."
if [ ! -d "verifiers" ]; then
  curl -sSL https://raw.githubusercontent.com/PrimeIntellect-ai/verifiers/main/scripts/install.sh | bash
fi

log "Setting up workspace..."
cat >prime.code-workspace <<'EOL'
{
    "folders": [
        {
            "path": "prime-rl"
        },
        {
            "path": "verifiers"
        },
        {
            "path": "research-environments"
        }
    ],
    "settings": {}
}
EOL

log "Setup completed!"
